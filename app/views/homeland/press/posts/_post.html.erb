<div class="post" id="post-<= post.id %>">
  <div class="post-title"><%= link_to post.title, post %></div>
  <% if post.published? %>
  <div class="post-summary markdown">
    <%= simple_format post.summary %>
  </div>
  <div class="post-info">
    <%= user_name_tag(post.user) %> Â·
    <%= timeago(post.published_at) %>
  </div>
  <% end %>
</div>
