<% title_tag "头条" %>

<div class="row">
  <div class="col-md-9">
    <div id="post-list" class="panel panel-default post-<%= action_name %>">
      <div class="panel-body">
        <% if @posts.blank? %>
          <div class="no-result">暂无任何文章</div>
        <% else %>
          <%= render partial: 'post', collection: @posts %>
        <% end %>

        <%= paginate @posts %>
      </div>
    </div>
  </div>
  <%= render 'sidebar' %>
</div>
